{
  "include": ["packages"],
  "exclude": ["**/node_modules/**", "packages/*/dist/**", "**/*.d.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/"
  }
}
